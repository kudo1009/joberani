<div class="not-under">
  <% posts.each do |post| %>
    <%= link_to post do %>
      <div class ="card">
          <table class="table table-responsive table-sm post-card">
            <tbody>
              <tr>
                <td class="border-top-0" rowspan="2">
                  <% if post.user.image.present? %>
                    <%= image_tag post.user.image %>
                  <% else %>
                    <%= image_tag '/user.png' %>
                  <% end %>
                </td>
                <td class="border-top-0">名前:<%= post.user.name %><br>
                一緒に働いていた期間:<%= post.period %></td>
              </tr>
              <tr>
                <td class="border-top-0"><strong><%= post.content %></strong></td>
              </tr>
            </tbody>
          </table>
          <small><i class="fa fa-star notfavorite-btn"></i>お気に入り！ <%= post.favorites.count %>件　<i class="fa fa-comment fa-fw"></i>コメント <%= post.comments.count %>件</small>
      </div>
    <% end %>
  <% end %>
</div>
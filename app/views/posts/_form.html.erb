<%= form_with(model: @post, local: true) do |f| %>

  <div class="form">
   <div class="form-body">
       <% @post.errors.full_messages.each do |message| %>
      <div class="form-error">
       <%= message %>
      </div>
      <% end %>
      
      
     <div class="form-group">
      <%= f.label :会社名, class: "label-inline" %> <small class="text-muted">任意で構いません。〇〇を作っている会社などでも大丈夫です</small>
      <%= f.text_field :company, class:'form-control' %>
     </div>
     
     <div class="form-group">
      <%= f.label :業種や職種, class: "label-inline" %> <small class="text-muted">一緒にどんな仕事をしていましたか</small>
      <span class="badge badge-pill badge-danger">必須</span>
      <%= f.text_field :industry, class:'form-control' %>
     </div>
     
     <div class="form-group">
      <%= f.label :一緒に働いていた期間, class: "label-inline" %>  <small class="text-muted">例:1ヵ月、1年など</small>
      <%= f.text_field :period, class:'form-control' %>
     </div>
     
     <div class="form-group">
      <%= f.label :どのような人と一緒に働いていましたか？, class: "label-inline" %>
      <span class="badge badge-pill badge-danger">必須</span>
      <%= f.text_area :content, class:'form-control' %>
     </div>
     
     <div class="form-group">
      <%= f.label :大変だったことや気を付けたことはありますか？, class: "label-inline" %>
      <span class="badge badge-pill badge-danger">必須</span>
      <%= f.text_area :matter, class:'form-control' %>
     </div>
     
     <div class="form-group">
      <%= f.label :これから一緒に働く人向けにアドバイスはありますか？, class: "label-inline" %>
      <span class="badge badge-pill badge-danger">必須</span>
      <%= f.text_area :episode, class:'form-control' %>
     </div>
     
     
    <input type="submit" value="投稿する">
   </div>
  </div>
  
<% end %>
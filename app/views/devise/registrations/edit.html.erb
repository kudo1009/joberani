<div class="main users-edit">
  <div class="container">
    <div class="form-heading">アカウント編集</div>
    <div class="form users-form">
      <div class="form-body">
      
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
        
          <p>現在のプロフィール画像</p>
          <%= image_tag @user.image,:size =>'100x100' %>
          <%= f.file_field :image %>
          <%= f.hidden_field :image_cache %>
          <div class="form-group">
            <label class="label-inline" for="name">名前</label>
            <span class="badge badge-pill badge-danger">必須</span>
            <small class="text-muted">本名でなくても大丈夫です。</small>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <label class="label-inline" for="email">メールアドレス</label>
            <span class="badge badge-pill badge-danger">必須</span>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <label class="label-inline" for="age">年齢</label>
            <%= f.text_field :age, class: 'form-control' %>
            <small class="text-muted">半角数字で入力してください。</small>
          </div>
          
          <div class="form-group">
            <%= f.label :gender, '性別', class:'control-label' %>
            <%= f.select :gender, [["",""], ["女性","女性"], ["男性","男性"]], {},   class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :town, '出身地' %>
            <%= f.text_field :town, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :introduce, '自己紹介（250文字以下）' %>
            <%= f.text_area :introduce, :maxlength => "255", :size => "80x5",  class: 'form-control'  %>
          </div>
          
          <input type="submit" value="保存">
        <% end %>
        <div>
          <%= link_to :back do %>
            <i class="fa fa-arrow-circle-left fa-fw"></i> マイページへ戻る
          <% end %>
        </div>
        
        <br>
        <br>
        
        <h5>アカウントを削除する</h5>
        <div>
          <%= link_to registration_path(resource_name), data: { title: '確認', confirm: '本当に削除してもよろしいですか？', cancel: "キャンセル", commit:'削除する' }, method: :delete do %>
            <i class="fa fa-trash fa-fw"></i> アカウントを削除
          <% end %>
        </div>
        
      </div>
    </div>
  </div>
</div>
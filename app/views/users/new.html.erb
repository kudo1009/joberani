<div class="main users-new">
  <div class="container">
    <div class="form-heading">新規会員登録</div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        
        <%= form_with(model: @user, local: true, multipart: true) do |f| %> 
        
          <div class="form-group">
            <label class="label-inline" for="name">プロフィール画像</label>
            <small class="text-muted">設定をしなくても利用は可能です。</small>
            <%= f.file_field :image %>
          </div>
          
          <div class="form-group">
            <label class="label-inline" for="name">名前</label>
            <span class="badge badge-pill badge-danger">必須</span>
            <small class="text-muted">本名でなくても大丈夫です。</small>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <label class="label-inline" for="email">メールアドレス</label>
            <span class="badge badge-pill badge-danger">必須</span>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <label class="label-inline" for="password">パスワード(6文字以上)</label>
            <span class="badge badge-pill badge-danger">必須</span>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :password_confirmation, 'パスワード（確認）' %>
            <span class="badge badge-pill badge-danger">必須</span>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
          
          <div class="form-group">
             <label class="label-inline" for="age">年齢</label>
             <%= f.text_field :age, class: 'form-control' %>
          </div>
          
          <div class="form-group">
             <%= f.label :gender, '性別', class:'control-label' %>
             <%= f.select :gender, [["",""], ["女性","女性"], ["男性","男性"]], {},   class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :town, '出身地' %>
            <%= f.text_field :town, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :introduce, '自己紹介（255文字未満）' %>
            <span class="badge badge-pill badge-danger">必須</span>
            <%= f.text_area :introduce, :maxlength => "255",  class: 'form-control'  %>
          </div>
          
          <%= f.submit "登録する" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="main users-edit">
  <div class="container">
    <div class="form-heading">アカウント編集</div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
      
        <%= form_with(model: @user, url: user_path, local: true) do |f| %>
        
          <p>現在のプロフィール画像</p>
          <%= image_tag @user.image,:size =>'100x100' %>
          <%= f.file_field :image %>
          <%= f.hidden_field :image_cache %>
          <div class="form-group">
            <label class="label-inline" for="name">名前</label>
            <span class="badge badge-pill badge-danger">必須</span>
            <small class="text-muted">本名でなくても大丈夫です。</small>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <label class="label-inline" for="email">メールアドレス</label>
            <span class="badge badge-pill badge-danger">必須</span>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <label class="label-inline" for="age">年齢</label>
            <%= f.text_field :age, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :gender, '性別', class:'control-label' %>
            <%= f.select :gender, [["",""], ["女性","女性"], ["男性","男性"]], {},   class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :town, '出身地' %>
            <%= f.text_field :town, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :introduce, '自己紹介（255文字未満）' %>
            <%= f.text_area :introduce, :maxlength => "255", :size => "80x5",  class: 'form-control'  %>
          </div>
          
          <div class="form-group">
            <label class="label-inline" for="password">パスワード(6文字以上)</label>
            <span class="badge badge-pill badge-danger">必須</span>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :password_confirmation, 'パスワード（確認）' %>
            <span class="badge badge-pill badge-danger">必須</span>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
          
          
          <input type="submit" value="保存">
        <% end %>
      </div>
    </div>
  </div>
</div>